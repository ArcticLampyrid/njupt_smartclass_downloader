#progress-container {
    width: 100%;
    height: 100%;
    padding: 1;
}

#progress-title {
    text-style: bold;
    color: $primary;
    margin-bottom: 1;
    height: 1;
}

.task-list {
    width: 100%;
    height: 1fr;
    border: solid $primary;
}

.task-list ListItem {
    padding: 1;
}

#scroll-status {
    height: 1;
    margin-top: 1;
    text-align: center;
    color: $accent;
    text-style: dim;
}
